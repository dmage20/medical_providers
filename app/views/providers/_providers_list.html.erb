<% if @providers.any? %>
  <div class="row">
    <div class="col-12">
      <p class="text-muted-healthcare mb-3">
        <i class="bi bi-check-circle-fill text-success me-1"></i>
        Found <%= pluralize(@providers.count, 'provider') %>
      </p>
    </div>
  </div>
  <div class="row">
    <% @providers.each do |provider| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <%= render provider %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="empty-state">
    <i class="bi bi-search"></i>
    <h5 class="mt-3">No providers found</h5>
    <p class="text-muted-healthcare">
      Try adjusting your search terms or <%= link_to "view all providers", providers_path, data: { turbo_frame: "_top" } %>
    </p>
  </div>
<% end %>
