<div id="<%= dom_id provider %>" class="card doctor-card h-100">
  <div class="card-body doctor-info">
    <h5 class="card-title mb-3">
      <i class="bi bi-person-badge me-2"></i>
      <%= provider.full_name %>
    </h5>

    <% if provider.primary_taxonomy.present? %>
      <div class="mb-2">
        <small class="text-muted-healthcare">
          <i class="bi bi-clipboard-pulse me-1"></i>
          <strong>Specialty:</strong>
        </small>
        <div class="ms-4"><%= provider.primary_taxonomy.specialization %></div>
      </div>
    <% end %>

    <div class="mb-2">
      <small class="text-muted-healthcare">
        <i class="bi bi-card-text me-1"></i>
        <strong>NPI:</strong>
      </small>
      <div class="ms-4"><%= provider.npi %></div>
    </div>

    <% if provider.primary_location.present? %>
      <div class="mb-2">
        <small class="text-muted-healthcare">
          <i class="bi bi-geo-alt me-1"></i>
          <strong>Location:</strong>
        </small>
        <div class="ms-4">
          <%= provider.primary_location.city_name %>, <%= provider.primary_location.state&.code %>
        </div>
      </div>
    <% end %>

    <div class="mt-3 pt-3 border-top">
      <%= link_to provider, class: "btn btn-outline-primary btn-sm w-100", data: { turbo_frame: "_top" } do %>
        <i class="bi bi-eye me-1"></i>View Profile
      <% end %>
    </div>
  </div>
</div>
